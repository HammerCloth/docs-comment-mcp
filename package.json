{
  "name": "docs-comment-mcp",
  "version": "0.2.0",
  "description": "MCP server for adding comments and track changes to Word/WPS documents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "docs-comment-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "word",
    "wps",
    "docx",
    "comments",
    "annotations",
    "track-changes",
    "revisions",
    "ai",
    "claude"
